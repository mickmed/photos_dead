 </head>
 
 <style>  
@font-face {
  font-family: "boston traffic";
  src: url(/assets/Boston.ttf) format("truetype");
}
   </style>  
<body>
 <%= render 'layouts/header' %>	
  
	  <div id="slides" style="display:none;">	 
	   <div class = "height-fill">
	    <div class="slides-container">
	    <% if @photo %>
	     <% @fullscreen_photos.each do |photo| %>
	 	
	   	  <%= photo[:title] %>
	   	  
	   	   <%= link_to photo_path(id: @photo.id) do %>
	 	    <div class="shoonga" style="background-image: url(<%= photo.picture %>)"></div>
	 	   
	       <% end %>
	      
	       <% end %>
	      
	      <% end %>
	    </div>
	   </div>
	 
	  <div id="fullNav">
	   <nav class="slides-navigation">
	    <a href="#" class="next">>></a>
	    <a href="#" class="prev"><<</a>
	   </nav>
	  </div>
	 </div>
   

 	
 	

 <div class="container">
  <div style="font-family:boston traffic;color:green;margin-left:15px">
   <br>     
   <% if @photo %>
	


     <% if (@current_page) || (session[:category_id]) %>
      <% if session[:category_id] %>
      
      
     	<% @name = session[:category].name %>
      <% else %>
        <% @name = session[:category] %>
      <% end %>
     <%= link_to @name, photos_path(category_id: session[:category_id]) %>
	  <%= [@photos.count] %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
     <% if @current_page > 1 %>
      <% @previous = @current_page-1 %>
      <%= link_to '< ', photos_path(category_id: @current_cat, page: @previous) %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
      <%= link_to @current_page-1, photos_path(category_id: @current_cat, page: @previous) %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
     <% end %>
         <span style="color:orange"><%= @current_page %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</span>
          <% @next = @current_page+1 %>
      <%= link_to @current_page+1, photos_path(category_id: @current_cat, page: @next) %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
      <%= link_to ' >', photos_path(category_id: @current_cat, page: @next) %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
    <% end %>

   <%else%>

    <% @photos.count %>
    <% if session[:category_id].is_a? Numeric %>
     
     <% if @photos.count > 3 %>
          <div style="display:inline-block">
          <span style="line-height:16px">   
           <%= link_to session[:category].name, photos_path(category_id: session[:category_id]) %>
          </span>
          <%= [@photos.count] %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
          <%= will_paginate @photos, :previous_label=>"<", :next_label=>">" %>
          </div>
     <% end %>
    <% else %>
     <% if session[:category] %>
     	
          <% if @photos.count > 3 %>
           <div style="display:inline-block">
            <span style="line-height:16px">   <%= link_to session[:category], photos_path(category_id: session[:category]) %></span>
            <%= [@photos.count] %>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
            <%= will_paginate @photos, :previous_label=>"<", :next_label=>">" %>
           </div>
     <% end %>
    <% end %>
   <% end %>

 
 
 <% end %>
 </div>
	<br>
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
  <%= yield %> 
  <%= render 'layouts/footer' %>
 </div>
</body>
</html>