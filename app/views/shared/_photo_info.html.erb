<% if File.exist?('public'+@photo.picture.url) %>
	<% @size =  ImageSize.path('public'+ @photo.picture.url).size %>
<% end %>

<% if @size %>
	<% if @size[0]>@size[1]%>
		<% @width = '500px' %>
	<% else %>
		<% @width = '350px' %>
	<% end %>
<%else%>
<%end%>

<div class='menu row' style="-moz-column-width:<%= @width %>;-webkit-column-width: <%= @width %>;width:85%;margin: 0 auto;padding-top:0px">
	<span>
		
		<div style="display:inline-block">
			<%= @photo.title %>
			<% if @photo.date_taken %>
				<div style="float:right">
					<%= @photo.date_taken.strftime("%m/%d/%y") %>
				</div>
			<% end %>
			<%= image_tag @photo.picture, :class=>"list-group-item img-responsive center-blcock", :style => 'cursor:pointer;cursor:hand', :onclick=>"slider()", :id => 'slider', :alt =>"photo pic" %>
			<%= "views: #{@photo.photo_views}" %>
			<%= link_to "<---    ", photo_path(id: @photoback.to_s), :style => "margin-left:55px" %>&nbsp
			<%= link_to "    --->", photo_path(id: @photonext.to_s) %>
		</div> 
		
		<div class="list-group-item" style="margin:20px">
			<%= @photo.description%>
		</div> 
		<% if @current_cat %>
			<div style="display:inline-block;float:right;width:100%">
				<% @photos.each do |photo| %>
					<%= link_to photo_path(id: photo.id) do %>
						<%= image_tag photo.picture, class: 'img-responsive center-bldock', style: 'float:right;margin:5px;max-width:120px;max-height:120px', alt:'' %>
					<% end %>
				<% end %>
			</div>
		<% end %>
	</span>


</div>

