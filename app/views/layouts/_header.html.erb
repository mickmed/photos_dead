

<header class="navbar navbar-fixed-top">
  <div class="container">
  <%= link_to image_tag('MAM11bc.png', :alt => 'mick medium', height: '46', id: 'logo', align: 'center', margin: '1px'), root_path, id: "logo" %>
<div style="font-family:boston traffic">
  
   <% @hard_cats = ['random','abc','newest']  %>
   
   <% @hard_cats.each do |hard_cat| %>
   
    <% if hard_cat == session[:hard_cat]%>
    	<% @color = session[:color]%>
    <%else%>
    	<% @color = '' %>
    <% end %>
   
     <a href = <%= photos_path(hard_cat: hard_cat)%> style='color:<%= @color %>'><%= hard_cat %></a>&nbsp&nbsp&nbsp
   <% end %>
    

      
      <% if session[:current_cat] %>
      <% @photos_count = Photo.where(categories: {id: session[:current_cat]}).includes(:categories).count.to_s %>
       <% @c = session[:current_cat] %>

       <% @ci = @cats.index(@c) %>
       <% @ci = @ci.to_i %>


       <% @to_id = @cats[0..@ci] %>

       <% @to_id = @to_id.reverse.drop(1).reverse %>


       <%# @ci %>
       <% @ci = @ci+1   %>
       <% @from_id = @cats[@ci..-1] %>
           <% @from_id = @from_id.drop(0) %>

           <% @cats = @to_id + @from_id %>

       <% @to_id.each do |cat| %>
        <span class="cats"><%= link_to cat.name, photos_path(category_id: cat.id) %></span>
       <% end %>

      &nbsp<span class = "cats" style="color:green"><%= @c.name + ' [' + @photos_count + ']     ' %></span>&nbsp

       <% @from_id.each do |cat| %>
        <span class="cats"><%= link_to cat.name, photos_path(category_id: cat.id) %></span>
       <% end %>



      <% else %>


    <% @cats.each do |cat| %>
        <span class="cats"><%= link_to cat.name, photos_path(category_id: cat.id) %></span>
       <% end %>

      <%end%>

</div>
  </div>
</header>